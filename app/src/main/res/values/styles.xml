<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="hero_param">
        <item name="android:layout_margin">@dimen/hero_param_margin</item>
        <item name="android:fontFamily">@font/esteban</item>
        <item name="android:paddingBottom">@dimen/hero_param_padding</item>
        <item name="android:paddingTop">@dimen/hero_param_padding</item>
        <item name="android:textColor">@color/tg_header</item>
        <item name="android:textSize">@dimen/font_size_param</item>
    </style>

    <style name="hero_paramValue">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/tg_text</item>
        <item name="android:textSize">@dimen/font_size_param</item>
        <item name="android:fontFamily">@font/esteban</item>
        <item name="android:textColorHint">@color/tg_text</item>
    </style>

    <style name="font_resources">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/esteban</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/tg_header</item>
        <item name="android:textSize">@dimen/font_size_param</item>
    </style>

    <style name="font_resourcesValue">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/esteban</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/tg_text</item>
    </style>

    <style name="header">
        <item name="android:layout_marginTop">@dimen/hero_param_margin</item>
        <item name="android:fontFamily">@font/esteban</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/tg_header</item>
        <item name="android:textSize">@dimen/font_size_header</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:textColorHint">@color/tg_text</item>
    </style>
</resources>